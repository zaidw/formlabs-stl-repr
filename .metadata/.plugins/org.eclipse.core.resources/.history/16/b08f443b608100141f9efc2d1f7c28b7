package stlRepr;

public class Triangle {

	/**
	 * @param args
	 */
	
	Vertex v1;
	Vertex v2;
	Vertex v3;
	Vertex norm;
	
	public Triangle(Vertex v1, Vertex v2, Vertex v3, Vertex normal) {
		this.v1 = v1;
		this.v2 = v2;
		this.v3 = v3;
		this.norm = normal;
	}
	
	public Vertex[] getVertices() {
		return {v1, v2, v3};
	}

}

